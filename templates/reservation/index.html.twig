{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>RevId</th>
                <th>DateDeb</th>
                <th>DateFin</th>
                <th>Type</th>
                <th>NbrAdultes</th>
                <th>NbrEnfants</th>
                <th>Destination</th>
                <th>HebergementId</th>
                <th>VolId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.revId }}</td>
                <td>{{ reservation.dateDeb ? reservation.dateDeb|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.type }}</td>
                <td>{{ reservation.nbrAdultes }}</td>
                <td>{{ reservation.nbrEnfants }}</td>
                <td>{{ reservation.destination }}</td>
                <td>{{ reservation.hebergementId }}</td>
                <td>{{ reservation.volId }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'revId': reservation.revId}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'revId': reservation.revId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
