{% extends 'base.html.twig' %}

{% block title %}Vol {% endblock %}

{% block body %}
 <div class="body">  
<div class="tab">
<div class="tab-header" > <h1> Liste des Vols </h1>    <p class="create">   <a href="{{ path('app_vol_new') }}"><button type="button" class="btn btn-primary">Create new</button></a></p>  </div>
 
    <table class="table">
        <thead>
            <tr>
               
                <th>Destination</th>
                <th>Depart</th>
                <th>Image</th>
                <th>Prix</th>
                <th>X</th>
                <th>Y</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vol in vols %}
            <tr>
                <td>{{ vol.destination }}</td>
                <td>{{ vol.depart }}</td>
                <td>{{ vol.image }}</td>
                <td>{{ vol.prix }}</td>
                <td>{{ vol.x }}</td>
                <td>{{ vol.y }}</td>
                <td>
                    <a href="{{ path('app_vol_show', {'volId': vol.volId}) }}"><button type="button" class="btn btn-primary">show</button></a>

                    <a href="{{ path('app_vol_edit', {'volId': vol.volId}) }}"><button type="button" class="btn btn-primary">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
</div>

   
{% endblock %}
